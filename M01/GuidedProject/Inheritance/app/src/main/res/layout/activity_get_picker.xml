<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".GetPickerActivity">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/SimpleGetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="GET - Simple Request"
            android:textSize="18sp"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/PathGetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Get - Path Parameter"
            android:textSize="18sp"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/QueryGetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Get - Query Parameter"
            android:textSize="18sp"
    />

</LinearLayout>